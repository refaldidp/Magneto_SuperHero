<resources>

    <style name="Theme.MAGNETO" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/textColorPrimary</item>

        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/textColorSecondary</item>

        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>

        <item name="cardViewStyle">@style/Widget.CardView</item>
    </style>


    <style name="Widget.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/textColorSecondary</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>


    <style name="SuperheroText.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SuperheroText.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="CircleImageView">
        <item name="shapeAppearanceOverlay">@style/CircleImageViewShape</item>
    </style>

    <style name="CircleImageViewShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0%</item>
    </style>
</resources>
